<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="message_wizard_form" model="ir.ui.view">
        <field name="name">message.wizard.form</field>
        <field name="model">message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-center alert alert-success" colspan="2"  role="alert">
                    <field name="message"  readonly="1"/>
                </p>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1"
                        class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
    <record id="message_wizard_fail_form" model="ir.ui.view">
        <field name="name">message.wizard.fail.form</field>
        <field name="model">message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-center alert alert-danger" colspan="2"  role="alert">
                    <field name="message"  readonly="1"/>
                </p>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1"
                        class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>    

</odoo>