<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="shopify_inventory_wizard_form_view" model="ir.ui.view">
        <field name="name">shopify.inventory.wizrd.form.view</field>
        <field name="model">shopify.inventory.update</field>
        <field name="arch" type="xml">
            <form string="Select Instance">
                <sheet>
                    <div>
                        <p colspan="2" class="alert alert-warning" role="alert">
                            <u>
                                <h3 style="font-weight:bold;color:#7d5a29">Note :</h3>
                            </u>
                            <b>
                                Are you sure to import inventory from this instance?
                            </b>
                        </p>
                    </div>

                    <group>
                        <field name="shopify_instance_id" required="1" options="{'no_create':True,'no_create_edit':True}"/>
                    </group>

                    <footer>
                        <button name="import_shopify_inventory" string="Update Inventory" type="object"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wizard_shopify_update_inventory" model="ir.actions.act_window">
        <field name="name">Shopify - Update Inventory</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shopify.inventory.update</field>
        <field name="view_id" ref="shopify_inventory_wizard_form_view"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
